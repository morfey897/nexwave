{
	"compilerOptions": {
		"target": "ES6",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [
			{
				"name": "next"
			}
		],
		"paths": {
			// Path to files
			"~errorCodes": ["./src/constants/errorCodes.ts"],
			"~enums": ["./src/constants/enums.ts"],
			"~crud": ["./src/constants/crud.ts"],
			"~utils": ["./src/utils/index.ts"],
			"~types": ["./src/types/index.ts"],
			"~icons": ["./src/icons/index.ts"],
			// Add the following paths
			"~root/*": ["./src/*"],
			"~components/*": ["./src/components/*"],
			"~constants/*": ["./src/constants/*"],
			"~schemas/*": ["./src/schemas/*"],
			"~lib/*": ["./src/lib/*"],
			"~utils/*": ["./src/utils/*"],
			"~models/*": ["./src/models/*"],
			"~dialogs/*": ["./src/dialogs/*"],
			"~actions/*": ["./src/actions/*"],
			"~types/*": ["./src/types/*"],
			"~hooks/*": ["./src/hooks/*"],
			"~icons/*": ["./src/icons/*"],
			"~styles/*": ["./src/styles/*"],
			// Path to packages
			"@packages/*": ["../../packages/*"]
		}
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
	"exclude": ["node_modules"]
}
